<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/cvListKeluhan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_list_keluhan">
        <ImageView
            android:id="@+id/img_status_keluhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/status_progress"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/txt_status_keluhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROGRESS"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_jenis_keluhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_status_keluhan"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="INTERNET"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_keluhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internet Lemot broooow, ruangan saya internetnya lemot sekali, tolong perbaiki dong plissss, saya ngga bisa streamingan loh jadinyaa hiksss"
            android:textSize="13sp"
            android:layout_below="@+id/txt_jenis_keluhan"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txt_tgl_keluhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 JUL 2018"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="14dp"/>
        <TextView
            android:id="@+id/txt_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIVISI PENGEMBANGAN WILAYAH DAN OPTIMASI ASET"
            android:textSize="8sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="132dp"
            android:layout_marginRight="18dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>